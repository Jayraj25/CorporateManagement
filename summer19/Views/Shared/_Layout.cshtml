<!DOCTYPE html>
<html>

<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/js/lib/bootstrap/dist/css/bootstrap4.1.3.min.css" rel="stylesheet" />
    <script src="~/js/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="~/css/Style.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>


    <nav class="navbar navbar-expand-sm navbar-light" style="background-color: #3498db;position:sticky; top: 0; z-index: 2; height: 60px;">
        <h4 style="color: #fff; margin-left:40px;">Collabera</h4>
        <ul class="navbar-nav ml-auto">
            <li><h6><a href="@Url.Action("Logout","Home")"><i class="fas fa-sign-out-alt" style="font-size:30px;color:white;" data-toggle="tooltip" title="Logout"></i></a></h6></li>
            <li><p></p></li>
        </ul>
    </nav>
    <div id="wrapper" class="active">
        <div id="sidebar-wrapper">
            <ul id="sidebar_menu" class="sidebar-nav">
                <li class="sidebar-brand"><a id="menu-toggle" href="#">Menu<span id="main_icon"><i class="fa fa-bars" aria-hidden="true"></i></span></a></li>
            </ul>
            <ul class="sidebar-nav" id="sidebar">
                <li><a><button class="btn"><i class="fa fa-book" aria-hidden="true" style="color:black; float:right; margin-right:15px; margin-top:1px; margin-bottom:20px; font-size:40px;" title="Requirement Search"></i></button></a></li>
                <li><a><button class="btn"><i class="fa fa-plus" aria-hidden="true" style="color:black; float:right; margin-right:15px; margin-top:1px; margin-bottom:20px; font-size:40px;" title="Add Requirements"></i></button></a></li>
                <li><a><button class="btn"><i class="fa fa-search" aria-hidden="true" style="color:black; float:right; margin-right:15px; margin-top:1px; margin-bottom:20px; font-size:40px;" title="Candidtate Search"></i></button></a></li>
                <li><a><button class="btn"><i class="fa fa-users" aria-hidden="true" style="color:black; float:right; margin-right:15px; margin-top:1px; margin-bottom:20px; font-size:40px;" title="Add Candidate"></i></button></a></li>
                <li><a><button class="btn"><i class="fa fa-envelope" aria-hidden="true" style="color:black; float:right; margin-right:15px; margin-top:1px; margin-bottom:20px; font-size:40px;" title="Email Notifications"></i></button></a></li>

            </ul>
        </div>

        <div class="container-fluid" style="min-height: 85vh; min-width:170vh;">
            <div class="row content">

                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="footer" style="background-color: #3498db; color: white; text-align: center; position: fixed; left: 0; bottom: 0; width: 100%;">
            <h5>Corporate Management</h5>
        </div>


        <script>
            $("#menu-toggle").click(function (e) {
                e.preventDefault();
                $("#wrapper").toggleClass("active");
            });
        </script>
        @RenderSection("Scripts", required: false)
</body>
</html>
