@model IEnumerable<summer19.Model.Candidate>

@{
    ViewData["Title"] = "Assign";
}

<h4>Assign Requirement</h4>

<div class="card">
    <form method="post" action="">
        <div class="row" style="padding: 15px;">
            <div class="col-sm-3 md-3">
                <select class="form-control" id="selectreq" style="width:270px;" required>
                    <!--<select class="form-control" id="sel1" style="width:270px;" asp-for="Departement" required>-->
                    <option value="" selected disabled>Requirement Type</option>
                    <option value="IT">IT</option>
                    <option value="NON IT">NON IT</option>
                    <option value="Delivery">Delivery</option>
                    <option value="Sales">Sales</option>
                </select>
            </div>
                
            <div class="col-sm-3 md-3">
                <select class="form-control" id="selectpos" style="width:270px;" required>
                    <!--<select class="form-control" id="sel1" style="width:270px;" asp-for="Departement" required>-->
                    <option value="" selected disabled>Select Position</option>
                    <option value="Developer">Developer</option>
                    <option value="Marketing">Marketing</option>
                    <option value="Recruiter">Recruiter</option>
                    <option value="Sales">Sales</option>
                </select>
            </div>
            <div class="col-sm-3 md-3">
                <select class="form-control" id="selectloc" style="width:270px;" required>
                    <!--<select class="form-control" id="sel1" style="width:270px;" asp-for="Departement" required>-->
                    <option value="" selected disabled>Select Location</option>
                    <option value="Surat">Surat</option>
                    <option value="Vadodra">Vadodra</option>
                    <option value="Bangalore">Bangalore</option>
                    <option value="Mumbai">Mumbai</option>
                </select>
            </div>
            <div class="col-sm-1 md-1"></div>
            <div class="col-sm-2 md-2">
                <input type="button" class="btn btn-primary form-control" value="Search" style="float:right;"/>
            </div>
        </div>
    </form>
</div>
<br />
<table class="table table-bordered table-hover" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobtitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Department
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hire)
            </th>
            <th>Status</th>
            <th>
                @Html.DisplayNameFor(model => model.Jobcategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source)
            </th>
            <th> Resumes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <form method="post" action="Assign">
                <tr>
                    <td id="td_1">
                        @Html.DisplayFor(modelItem => item.Firstname)
                        @Html.DisplayFor(modelItem => item.Lastname)
                    </td>
                    <td id="td_2">
                        @Html.DisplayFor(modelItem => item.Jobtitle)
                    </td>
                    <td id="td_3">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td id="td_4">
                        @Html.DisplayFor(modelItem => item.Departement)
                    </td>
                    <td id="td_5">
                        @Html.DisplayFor(modelItem => item.Hire)
                    </td>
                    <td id="td_6">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td id="td_7">
                        @Html.DisplayFor(modelItem => item.Jobcategory)
                    </td>
                    <td id="td_8">
                        @Html.DisplayFor(modelItem => item.Source)
                    </td>
                    <td id="td_9">
                        <a href="~/Files/@item.Resumes" target="_blank" data-toggle="tooltip" title="Resume">
                            <img src="~/icon/pdf.png" style="width:50px;" />
                        </a>
                    </td>

                    <td>
                        <input type="submit" class="btn btn-primary" id="assgn" value="Assign" />
                    </td>
                </tr>
            </form>
        }
    </tbody>
</table>

