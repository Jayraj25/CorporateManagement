@model IEnumerable<summer19.Model.Candidate>

@{
    ViewData["Title"] = "Assign";
}

<table class="table table-bordered table-hover" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Jobtitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    Department
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hire)
                </th>
                <th>Status</th>
                <th>
                    @Html.DisplayNameFor(model => model.Jobcategory)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Source)
                </th>
                <th> Resumes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <form method="post" action="Assign">
                    <tr>
                        <td id="td_1">
                            @Html.DisplayFor(modelItem => item.Firstname)
                            @Html.DisplayFor(modelItem => item.Lastname)
                        </td>
                        <td id="td_2">
                            @Html.DisplayFor(modelItem => item.Jobtitle)
                        </td>
                        <td id="td_3">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td id="td_4">
                            @Html.DisplayFor(modelItem => item.Departement)
                        </td>
                        <td id="td_5">
                            @Html.DisplayFor(modelItem => item.Hire)
                        </td>
                        <td id="td_6">
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td id="td_7">
                            @Html.DisplayFor(modelItem => item.Jobcategory)
                        </td>
                        <td id="td_8">
                            @Html.DisplayFor(modelItem => item.Source)
                        </td>
                        <td id="td_9">
                            <a href="~/Files/@item.Resumes" target="_blank" data-toggle="tooltip" title="Resume">
                                <img src="~/icon/pdf.png" style="width:50px;" />
                            </a>
                        </td>

                        <td>
                            <input type="submit" class="btn btn-primary" id="assgn" value="Assign" />
                        </td>
                    </tr>
                </form>
            }
        </tbody>
</table>

