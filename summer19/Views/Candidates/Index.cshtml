@model IEnumerable<summer19.Model.Candidate>

@{
    ViewData["Title"] = "Index";
}

<h3 style="margin-top:10px;margin-bottom:10px;">
    Candidate Search
    <a asp-action="Create" asp-controller="Candidatesadd"><button class="btn btn-primary" style="float:right;"><i class="fa fa-plus" style="margin:5px;" aria-hidden="true"></i>Add</button></a>
</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobtitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Department
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hire)
            </th>
            <th>Status</th>
            <th>
                @Html.DisplayNameFor(model => model.Jobcategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source)
            </th>
            <th> Resumes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
                @Html.DisplayFor(modelItem => item.Middlename)
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jobtitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comptetenices)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jobcategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resumeupload)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resumes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
